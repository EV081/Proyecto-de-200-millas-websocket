{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pedidos",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "tenant_id",
    "sort_key": "pedido_id",
    "global_secondary_indexes": [
      {
        "name": "by_tenant_created_at",
        "partition_key": "tenant_id",
        "sort_key": "created_at"
      },
      {
        "name": "by_local_v2",
        "partition_key": "tenant_id_local",
        "sort_key": "created_at"
      },
      {
        "name": "by_usuario_v2",
        "partition_key": "tenant_id_usuario",
        "sort_key": "created_at"
      },
      {
        "name": "by_estado_v1",
        "partition_key": "tenant_id_estado",
        "sort_key": "created_at"
      }
    ]
  },
  "properties": {
    "tenant_id": { "type": "string", "minLength": 1 },
    "pedido_id": { "type": "string" },
    "local_id": { "type": "string" },
    "usuario_correo": { "type": "string", "format": "email" },
    "productos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nombre": { "type": "string" },
          "cantidad": { "type": "integer", "minimum": 1 }
        },
        "required": ["nombre", "cantidad"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "costo": { "type": "number", "minimum": 0 },
    "moneda": { "type": "string", "enum": ["PEN", "USD"], "default": "PEN" },
    "direccion": { "type": "string" },
    "fecha_entrega_aproximada": { "type": ["string", "null"], "format": "date-time" },
    "estado": { "type": "string", "enum": ["procesando", "cocinando", "empacando", "enviando", "recibido"] },
    "created_at": { "type": "string", "format": "date-time" },

    "tenant_id_local":   { "type": "string" },
    "tenant_id_usuario": { "type": "string" },
    "tenant_id_estado":  { "type": "string" }
  },
  "required": [
    "tenant_id",
    "pedido_id",
    "local_id",
    "usuario_correo",
    "direccion",
    "costo",
    "estado",
    "created_at"
  ],
  "anyOf": [{ "required": ["productos"] }],
  "additionalProperties": false
}
